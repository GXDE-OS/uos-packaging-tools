#!/bin/bash
if [ "$1" != ""  ];then
if [[ $1 == file://* ]]; then
    # 如果是，移除 'file://' 部分并输出结果
    opt="${1#file://}"
else
    # 如果不是，直接输出原始路径
    opt=$1
fi

else
opt=`pwd`
fi
notify-send `basename $opt`开始打包 -i /usr/share/icons/uos-packaging-tools.png
dpkg-deb -Z xz  -b $opt $opt/..
notify-send `basename $opt`打包完成 -i /usr/share/icons/uos-packaging-tools.png
exit
